{
  "extends": "../../.config/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["./apps/web/src/*"],
      "@recipot/api": ["./packages/api/src"],
      "@recipot/constants": ["./packages/constants/src"],
      "@recipot/contexts": ["./packages/contexts/src"],
      "@recipot/hooks": ["./packages/hooks/src"],
      "@recipot/types": ["./packages/types/src"],
      "@recipot/utils": ["./packages/utils/src"],
      "@recipot/validators": ["./packages/validators/src"]
    },
    "types": ["vitest/globals"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".storybook/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
